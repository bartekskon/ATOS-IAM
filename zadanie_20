#!/bin/bash
clear

liczba0=0
liczba1=1
i=0

 echo $liczba0 
 echo $liczba0 > tmp.txt
 sleep 2s 
 echo $liczba1
 echo $liczba1 >> tmp.txt

    while (( $liczba0+$liczba1 && $i<8 ))
    do
    liczba2=$(($liczba0+$liczba1))
    sleep 2s
    echo $liczba2
    liczba0=$(($liczba1))
    liczba1=$(($liczba2))
    echo $liczba2 >> tmp.txt
    ((i++))
    done

    wynik=0
    while read num; do
    wynik=$(( $wynik + $num ))
    done <tmp.txt

   sleep 2s
   echo ""
   echo "Suma pierwszych 10 liczb ciÄ…gu to: "$wynik

   rm tmp.txt
